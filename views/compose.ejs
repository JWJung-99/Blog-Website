<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <br><br>

    <form action="/compose" method="post">
      <div class="form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" autofocus autocomplete="off">
      </div>

      <div class="form-group">
        <label for="postBody" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" rows="10" cols="80"></textarea>
      </div>

      <button class="btn btn-primary" type="submit" name="publish">Publish</button>
    </form>

<%- include("partials/footer"); -%>
